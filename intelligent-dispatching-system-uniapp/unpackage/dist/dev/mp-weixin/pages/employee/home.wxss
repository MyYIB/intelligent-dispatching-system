.home-container.data-v-08871800 {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}
.fixed-header.data-v-08871800 {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #f5f5f5;
  z-index: 100;
  padding: 0 30rpx;
  height: 240rpx;
}
.safe-area-top.data-v-08871800 {
  height: 100rpx;
  /* 顶部安全区域 */
}
.header.data-v-08871800 {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}
.title.data-v-08871800 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 标签切换样式 */
.tab-container.data-v-08871800 {
  display: flex;
  margin-bottom: 20rpx;
}
.tab-item.data-v-08871800 {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  position: relative;
}
.tab-text.data-v-08871800 {
  font-size: 28rpx;
  color: #666;
}
.tab-item.active .tab-text.data-v-08871800 {
  color: #007aff;
  font-weight: 500;
}
.tab-item.active.data-v-08871800::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}
.scrollable-content.data-v-08871800 {
  flex: 1;
  margin-top: 240rpx;
  /* 与fixed-header高度一致 */
  padding: 0 30rpx;
  padding-bottom: 120rpx;
  /* 留出底部安全区空间，避免被底部导航遮挡 */
  box-sizing: border-box;
}
.order-list.data-v-08871800, .maintenance-list.data-v-08871800 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-top: 50rpx;
}
.empty-tip.data-v-08871800 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-image.data-v-08871800 {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.empty-text.data-v-08871800 {
  font-size: 28rpx;
  color: #999;
}
.safe-area-bottom.data-v-08871800 {
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
}

